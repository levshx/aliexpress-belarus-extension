{
  "manifest_version": 3,
  
  "name": "AliExpress Belarus",
  "description": "Плагин исправляющий ошибки AliExpress в Беларуси",
  "version": "1.0.0",
  
  "icons": {
    "16": "icons/16.png",
    "32": "icons/32.png",
    "48": "icons/48.png",
    "128": "icons/128.png"
  },


  "permissions": [
    "activeTab",
    "tabs",
    "storage",
    "cookies"
  ],

  "action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },

  "host_permissions": [
    "https://aliexpress.com/*",
    "https://*.aliexpress.com/*",
    "https://aliexpress.ru/*",
    "https://*.aliexpress.ru/*"
  ],

  "background": {
    "service_worker": "./js/background.js"
  }
}